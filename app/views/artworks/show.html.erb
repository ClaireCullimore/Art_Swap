<div class="container">
  <div class="leftside">
    <img id="img-large" class="img-zoom-container" src="https://images.unsplash.com/photo-1541961017774-22349e4a1262?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=790&q=80" alt="painting">
    <div class="small-images">
      <img class="img" src="https://images.unsplash.com/flagged/photo-1572392640988-ba48d1a74457?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="painting">
      <img class="img" src="https://images.unsplash.com/flagged/photo-1572392640988-ba48d1a74457?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="painting">
      <img class="img" src="https://images.unsplash.com/flagged/photo-1572392640988-ba48d1a74457?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="painting">
    </div>
  </div>
  <div class="rightside">
    <div class="product-info">
        <h1><%= @artwork.title%></h1>
        <h2><%= @artwork.artist %></h2>
        <p><%= @artwork.category %></p>
        <p><%= @artwork.description %></p>
    </div>
    <div class="booking-form">
      <div class="text-input">
        <%= simple_form_for [ @artwork, @booking ] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
      </div>
    </br>
      <div> <%= f.submit "Book your Art Swap", class: "btn btn-warning" %></div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-second">
  <div class="headings">
    <h2>more works by <%= @artwork.artist %></h2>
  </div>
</div>
<div class="container-cards">
  <div class="cards">
    <% Artwork.by_artist(@artwork.artist).each do |art| %>
    <%= link_to artwork_path(art) do %>
    <div class="card-art">
      <img src="https://images.unsplash.com/photo-1577720580479-7d839d829c73?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=976&q=80" alt="painting">
      <div>
        <p class="p"><%="#{art.title}, #{art.artist}" %></p>
      </div>
      <div class="price-and-category">
        <p class="p"><%= art.category %></p>
        <h2 class="h2">£99.99</h2>
        </div>
      </div>
      <% end %>
        <% end %>
    </div>
</div>
<div class="container-second">
